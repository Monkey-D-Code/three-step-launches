<section class="hero-area">
            <h1>Update Profile</h1>
            <p>{{user.first_name}} {{user.last_name}}</p>
            
        </section>
    </header>

<section class="user-update-form">
    <form method="POST"  to='/user/profile/update'>
        {{#if fieldErrors}}
            <div class="field-errors">
                {{#each fieldErrors.errors}}
                    <div class="single-error">
                        <h4>{{this.param}}</h4>
                        <p>{{this.msg}}</p>
                    </div>
                    
                {{/each}}
            </div>
        {{/if}}
        <div class="form-group">
            <h4>Personal Information</h4>
            <input type="text" name="first_name" id="" placeholder="Your First Name" value={{user.first_name}}>
            <input type="text" name="last_name" id="" placeholder="Your Last Name" value={{user.last_name}}>
            <input type="url" name="display_image_url" id="" placeholder="Display Image Link" value={{user.display_image_url}}>
        </div>
        <div class="form-group">
            <h4>Contact Info</h4>
            <input type="email" name="email" id="" placeholder="Enter your Email" value={{user.email}}>
            <input type="number" name="phone" id="" placeholder="Your Phone Number" min=0 value={{user.phone}}>
            <input type="hidden" name="_csrf" value={{csrfToken}}>
            <button class='button-2' type='submit'><i class="fa fa-floppy-o" aria-hidden="true"></i>Update</button>
        </div>

    </form>
</section>